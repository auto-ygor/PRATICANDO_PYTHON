{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Module",
            "type": "debugpy",
            "request": "launch",
            "module": "exercicios.cadastro_cartao.cadastro_cartao",
            "cwd": "${workspaceFolder}", // Diretório de trabalho atual (raiz do projeto)
            "console": "integratedTerminal", // Debug no terminal integrado do VS Code
            "justMyCode": true, //Permite que debuge arquivos externos, como da própria biblioteca do python.
            "purpose": [
                "debug-in-terminal"
            ],
            "python": "${command:python.interpreterPath}", //Puxa o interpretador do python do próprio VS Code
            "env": {
                "PYTHONPATH": "${workspaceFolder}" // Adiciona a raiz do projeto ao PYTHONPATH do debugger
            }
        }
    ]
}